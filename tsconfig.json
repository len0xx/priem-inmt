{
	"compilerOptions": {
		"paths": {
			"$components": [
				"src/lib/components"
			],
			"$components/*": [
				"src/lib/components/*"
			],
			"$lib": [
				"src/lib"
			],
			"$lib/*": [
				"src/lib/*"
			]
		},
		"allowSyntheticDefaultImports": true,
		"typeRoots": [ "./src/types", "./node_modules/@types" ]
	},
	"extends": "./.svelte-kit/tsconfig.json"
}
